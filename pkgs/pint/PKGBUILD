pkgname='pint'
pkgver=0.19.0
pkgrel=1
arch=('x86_64')
depends=()
pkgdesc='Prometheus rule linter'
license=('Apache License 2.0')
ghrepo='cloudflare/pint'
url="https://github.com/${ghrepo}"

source=("https://github.com/${ghrepo}/releases/download/v${pkgver}/pint-${pkgver}-Linux-x86_64.tar.gz")
sha256sums=('SKIP')

options=('!strip')

package() {
  install -Dm 755 "${pkgname}-linux-amd64" "${pkgdir}/usr/bin/${pkgname}"
}
