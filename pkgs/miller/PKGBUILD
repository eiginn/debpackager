pkgname='miller'
pkgver=6.0.0
pkgrel=1
arch=('x86_64')
depends=()
pkgdesc='Miller is like awk, sed, cut, join, and sort for name-indexed data such as CSV, TSV, and tabular JSON'
license=('Other')
ghrepo='johnkerl/miller'
url="https://github.com/${ghrepo}"

source=("https://github.com/${ghrepo}/releases/download/v${pkgver}/miller_${pkgver}_linux_amd64.tar.gz")
#noextract=("binary-linux-amd64")
sha256sums=('SKIP')

options=('!strip')

package() {
  install -Dm 755 "mlr" "${pkgdir}/usr/bin/mlr"
}
