pkgname='zinc'
pkgver=0.2.5
pkgrel=1
arch=('amd64')
depends=()
pkgdesc='ZincSearch. A lightweight alternative to elasticsearch that requires minimal resources, written in Go.'
license=('Other')
ghrepo='zinclabs/zinc'
url="https://github.com/${ghrepo}"

source=("https://github.com/${ghrepo}/releases/download/v${pkgver}/zinc_${pkgver}_Linux_x86_64.tar.gz")
#noextract=("binary-linux-amd64")
sha256sums=('SKIP')

options=('!strip')

package() {
  install -Dm 755 "zinc" "${pkgdir}/usr/bin/zinc"
  #install -Dm 644 "${pkgname}.1" "${pkgdir}/usr/share/man/man1/${pkgname}.1"
  #install -Dm 644 "${pkgname}.completion.zsh" "/usr/share/zsh/vendor-completions/_${pkgname}"
  #install -Dm 644 "${pkgname}.completion.bash" "/usr/share/bash-completion/completions/${pkgname}"
}
